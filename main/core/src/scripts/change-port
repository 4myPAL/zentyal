# This scripts restarts webadmin, logs and events modules

use warnings;
use strict;

use EBox;
use EBox::Util::Init;
use EBox::Global;

EBox::init();

my $global = EBox::Global->getInstance();
my $webadmin = $global->modInstance('webadmin');
$webadmin->model('AdminPort')->setValue('port', $ARGV[0]);
$webadmin->saveConfig();
$global->modInstance('haproxy')->saveConfig();
$global->modInstance('services')->saveConfig() if $global->modExists('services');

EBox::Util::Init::moduleRestart('firewall') if $global->modExists('firewall');
EBox::Util::Init::moduleRestart('haproxy');
EBox::Util::Init::moduleRestart('webadmin');

1;
